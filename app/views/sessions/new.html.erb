<h2>Studio Assistant Sign in! </h2>

<% if flash[:message]%>
  <%= flash[:message] %>
<% end %>

<%= link_to('Log in with Facebook!', '/auth/facebook') %>

<%= form_for @assistant, url: signin_path, method: :post do |f| %>
  Email: <%= f.email_field :email %>
  Password: <%= f.password_field :password, id: 'password' %>
  <%= f.submit "Sign In" %>
  Or <%= link_to(controller: 'assistants', action: 'new') { 'sign up' } %>
<% end %>
