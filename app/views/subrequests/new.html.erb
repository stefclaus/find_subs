<%= form_for @subrequest do |f| %>
  <%= render partial: 'layouts/errors', locals: {object: @subrequest} %>
  <%= f.label :yogaclass_id, 'Select a Class:' %>
  <%= f.collection_select :yogaclass_id, Yogaclass.all, :id, :name,  { include_blank: true }, required: true %>
  <br>
  <br>
  <%= f.label :assistant_requesting, 'Who is covering this class?' %>
  <%= f.text_area :assistant_requesting, :value => @assistant.name, required: true %>
  <br>
  <br>
  <%= f.label :assistant_covering, 'Who is going to cover this class?' %>
  <%= f.text_area :assistant_covering, :value => 'Unassigned' %>
  <br>
  <br>
  <%= f.label :comment, 'Comment:' %>
  <%= f.text_area :comment, required: true %>
  <br>
  <br>
  <%= f.label :date, 'Date:' %>
  <%= f.text_area :date, required: true %>
  <br>
  <br>

<%= f.submit 'Submit' %>
	<% end %>
	<br>
	<br>
